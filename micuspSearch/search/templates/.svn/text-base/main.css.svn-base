@charset "utf-8";
/* CSS Document */
body {font-size:76%; font-family:"trebuchet MS", verdana, arial, sans-serif; background:#ffffff;}
 
#minMax {min-width:700px; max-width:1100px; margin:0 auto; background:#f0f0f0;}
 
#header {background:#a31e39;}

#searchbar {float:left; width:80%;margin-top:0px} 
#searchbar #searchbox{float:left;width:40px;}
#searchbar #searchbutton{float:left;}
#histogram {float:left; width:55%; background:#d0c0c0; height: 200px;}
#results {float:left; width:80%; background:#c0c0c0;}
#optionbar {float:right; width:20%; background:#c0b0b0;}
#results, #optionbar {padding-bottom:32767px; margin-bottom:-32767px;}
#wrapper {overflow:hidden;}
 
#piegraph {width:25%; float:left; background:#d8d8d8;}
 
#footer {clear:both; background:#455c5a;}
